@using ShippingDocuments.Application
@using ShippingDocuments.Common
@using ShippingDocuments.Domain
@using ShippingDocuments.Infrastructure.OData.Models
@using static ShippingDocuments.Components.Pages.SaleDocPages.PaperworkErrorCheckBox

@if (SaleDoc is not null)
{
    <div class="card">
        <div class="card-header">
            <div class="h5 text-center">Укажите ошибки оформления, при наличии:</div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.Stamp" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ReceiptCargoDate" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col"></div>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneeJobTitle" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneeSignature" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneeFullName" OnInput="OnCreateOrUpdateError" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsibleJobTitle" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsibleSignature" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsibleFullName" OnInput="OnCreateOrUpdateError" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ConsigneePowerOfAttorney" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.ResponsiblePowerOfAttorney" OnInput="OnCreateOrUpdateError" />
                </div>
                <div class="col"></div>
            </div>
            <hr />
            <div class="row">
                <div class="col">
                    <PaperworkErrorCheckBox SaleDoc="SaleDoc" ErrorType="PaperworkErrorType.Other" OnInput="OnCreateOrUpdateError" />
                </div>
            </div>
        </div>
    </div>


}

@code {
    [Parameter]
    public SaleDoc? SaleDoc { get; set; }

    [Parameter]
    public EventCallback<ErrorCheckBoxParams> OnCreateOrUpdateError { get; set; }
}